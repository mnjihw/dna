<Window x:Class="리듬_키워드_알리미.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:리듬_키워드_알리미"
        mc:Ignorable="d"
        Title="리듬 키워드 알리미" Height="400" Width="320" WindowStartupLocation="CenterScreen">
    <StackPanel x:Name="stackPanel">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Content="퀘이사존 특가게시판" IsChecked="True"/>
        </StackPanel>
        <Separator Visibility="Hidden" Height="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="키워드" VerticalAlignment="Center"/>
            <Separator Visibility="Hidden" Width="10"/>
            <TextBox Width="100" Height="25" x:Name="keywordTextBox" KeyDown="KeywordTextBox_KeyDown"/>
            <Separator Visibility="Hidden" Width="10"/>
            <Button Content="시작" Width="50" x:Name="startStopButton" Click="StartStopButton_Click"/>
        </StackPanel>
        <Separator Visibility="Hidden" Height="10"/>
        <ListBox Width="300" Height="300" KeyDown="ListBox_KeyDown" x:Name="listBox">
            
        </ListBox>
    </StackPanel>
</Window>

    